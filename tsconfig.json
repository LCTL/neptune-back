{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "filesGlob": [
    "./**/*.ts*",
    "!./node_modules/**/*.ts",
    "!./dist/**/*.ts",
    "!./typings/*/**/*.ts"
  ],
  "files": [
    "./src/app.ts",
    "./src/container.ts",
    "./src/docker.ts",
    "./src/error.ts",
    "./src/image.ts",
    "./src/machine.ts",
    "./src/test/container.spec.ts",
    "./src/test/image.spec.ts",
    "./src/test/machine.spec.ts",
    "./typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
